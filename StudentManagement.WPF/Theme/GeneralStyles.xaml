<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Colours-->
    <Color x:Key="BackColour">#616161</Color>
    <Color x:Key="ForeColour">#398e3d</Color>
    <Color x:Key="ShadowColour">#E6E6E6</Color>
    <Color x:Key="TitleColour">White</Color>
    <Color x:Key="FontColour">White</Color>
    <Color x:Key="BottonHoverColour">#4cb050</Color>

    <SolidColorBrush x:Key="MainBackground" Color="{StaticResource BackColour}"/>
    <SolidColorBrush x:Key="MainForeground" Color="{StaticResource ForeColour}"/>
    <SolidColorBrush x:Key="DropShadowColour" Color="{StaticResource ShadowColour}"/>
    <SolidColorBrush x:Key="HeaderTitleColour" Color="{StaticResource TitleColour}"/>
    <SolidColorBrush x:Key="FontMainColour" Color="{StaticResource FontColour}"/>
    <SolidColorBrush x:Key="ButtonStyleHoverColour" Color="{StaticResource BottonHoverColour}"/>
    
    <!--Fonts-->
    <FontFamily x:Key="Dosis">/Assets/fonts/#dosis</FontFamily>

    <Style TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource DropShadowColour}"/>        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonStyleHoverColour}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>